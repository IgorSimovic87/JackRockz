<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:src="@drawable/welcome_background1" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/gap_M">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subtitle"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/hint_color" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtSubtitle"
            android:text="One Night Stand"
            android:textStyle="bold"
            android:textSize="25sp"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtStroke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/hint_color"
            android:textSize="15sp"
            android:text="€ 23,95"
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@id/txtStroke"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:padding="3dp"
            android:background="@drawable/round_text_background"
            android:text="€ 14,95"
            android:textStyle="bold" />
    </RelativeLayout>
    <include layout="@layout/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_M">
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="@dimen/gap_S"
        android:text="45x"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="23sp"/>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/divider_color" />
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="104x"
            android:textStyle="bold"
            android:textSize="23sp"/>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/divider_color" />
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="12x"
            android:textStyle="bold"
            android:textSize="23sp"/>
    </LinearLayout>

    <include layout="@layout/divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/btnGet"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_button_height"
            android:layout_marginLeft="@dimen/gap_super"
            android:layout_marginRight="@dimen/gap_super"
            android:layout_marginTop="@dimen/gap_XL"
            android:layout_centerInParent="true"
            android:text="Get on guestlist"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/round_button_background"
            app:backgroundTint="@color/colorControlNormal"
            android:clickable="true"/>

    </RelativeLayout>
</LinearLayout>
