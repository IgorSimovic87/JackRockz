<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="invisible"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_item1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_M"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:padding="@dimen/gap_L">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pacha Cha (Pacha)"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/hint_color"
            android:textSize="15sp"
            android:text="1x" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTitle1"
            android:textSize="16sp"
            android:textColor="@color/hint_color"
            android:text="May 22, 2017" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_item2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_S"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:padding="@dimen/gap_L">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pacha Cha (Pacha)" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/hint_color"
            android:textSize="15sp"
            android:text="1x" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTitle2"
            android:textSize="16sp"
            android:textColor="@color/hint_color"
            android:text="May 22, 2017" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_item3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_S"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:padding="@dimen/gap_L">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtTitle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pacha Cha (Pacha)" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/hint_color"
            android:textSize="15sp"
            android:text="1x" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTitle3"
            android:textSize="16sp"
            android:textColor="@color/hint_color"
            android:text="May 22, 2017" />
    </RelativeLayout>
</LinearLayout>
